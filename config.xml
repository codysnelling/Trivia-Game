<?xml version="1.0" encoding="utf-8" ?>

<widget>
	xmlns = "http://www.w3.org/ns/widget"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id = "com.phonegap.appproject"
	version = "1.0"
>
	<name>App Name</name>
	
	<description>
		My first app using phonegap.
	</description>
	
	<author href="your site" email="cody.snelling@yahoo.com">
		Cody Snelling
	</author>
	
<!-- Preferences for the app -->
	<preference name="orientation" value="default"/>
	<preference name="target-device" value="universal"/>

<!-- Setting icons -->
	<!-- Android -->
	<icon src="imgs/my-icon"/>
	<icon src="imgs/my-icon-ldpi.png" gap:platform="android" gap:qualifier="ldpi"/>
	<icon src="imgs/my-icon-mdpi.png" gap:platform="android" gap:qualifier="mdpi"/>
	<icon src="imgs/my-icon-hdpi.png" gap:platform="android" gap:qualifier="hdpi"/>
	<icon src="imgs/my-icon-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi"/>
	<icon src="imgs/my-icon-xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi"/>
	
	<!-- iOS -->
	<icon src="imgs/my-icon-ldpi.png" gap:platform="ios" width="57" height="57"/>	
</widget>